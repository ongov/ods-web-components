{
	"name": "@ontario-digital-service/ontario-design-system-complete-styles",
	"version": "1.0.0",
	"private": false,
	"description": "This is a complete styles package for the Ontario Design System",
	"style": "dist/styles/css/compiled/ontario-theme.min.css",
	"sass": "dist/styles/scss/theme.scss",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"scss": "node-sass --importer node_modules/node-sass-package-importer/dist/cli.js --watch scss -o css ",
		"build": "gulp deploy",
		"clean": "rm -rf dist",
		"clean:full": "rm -rf node_modules && npm run clean",
		"format": "prettier --write ."
	},
	"files": [
		"dist/",
		"package.json",
		"README.md"
	],
	"authors": [
		{
			"name": "Nakib Momin",
			"email": "nakib.momin@ontario.ca"
		}
	],
	"license": "Apache-2.0",
	"dependencies": {
		"@ontario-digital-service/ontario-design-system-design-tokens": "2.0.0-beta.5",
		"@ontario-digital-service/ontario-design-system-global-styles": "2.0.0-beta.5",
		"@ontario-digital-service/ontario-design-system-component-library": "2.0.0-beta.5"
	},
	"devDependencies": {
		"del": "^6.0.0",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-if": "^3.0.0",
		"gulp-sass": "^5.0.0",
		"sass": "^1.43.4",
		"glob": "^8.0.3",
		"prettier": "^2.5.1"
	}
}
