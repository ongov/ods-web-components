{
	"name": "@ontario-digital-service/ontario-design-system-component-library-angular",
	"version": "2.4.1-alpha.2",
	"description": "Angular specific wrapper for ontario-design-system-component-library",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"ng": "ng",
		"start": "ng serve app-angular",
		"build": "npm run build:component-lib && npm run format:stencil",
		"build:component-lib": "ng build component-library",
		"build:app": "ng build app-angular",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"format:stencil": "prettier --write ./projects/component-library/src/lib/stencil-generated",
		"postbuild": "npm run copy:assets",
		"copy:images": "copyfiles -E -f \"node_modules/@ontario-digital-service/ontario-design-system-component-library/dist/ontario-design-system-components/assets/**/*\" dist/component-library/assets/images",
		"copy:fonts": "copyfiles -E -u 6 \"node_modules/@ontario-digital-service/ontario-design-system-component-library/dist/ontario-design-system-components/fonts/**/*\" dist/component-library/assets/fonts",
		"copy:favicons": "copyfiles -E -f \"node_modules/@ontario-digital-service/ontario-design-system-component-library/dist/ontario-design-system-components/favicons/**/*\" dist/component-library/assets/favicons",
		"copy:assets": "npm run copy:images && npm run copy:favicons && npm run copy:fonts"
	},
	"main": "./dist/component-library/index.t.ts",
	"module": "./dist/component-library/index.t.ts",
	"types": "./dist/component-library/index.t.ts",
	"files": [
		"dist/",
		"projects/component-library/src",
		"package.json",
		"README.md"
	],
	"dependencies": {
		"@angular/animations": "^15.2.0",
		"@angular/common": "^15.2.0",
		"@angular/compiler": "^15.2.0",
		"@angular/core": "^15.2.0",
		"@angular/forms": "^15.2.0",
		"@angular/platform-browser": "^15.2.0",
		"@angular/platform-browser-dynamic": "^15.2.0",
		"@angular/router": "^15.2.0",
		"@ontario-digital-service/ontario-design-system-component-library": "2.4.1-alpha.2",
		"@ontario-digital-service/ontario-design-system-global-styles": "2.4.1-alpha.2",
		"copyfiles": "^2.4.1",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0",
		"zone.js": "~0.12.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^15.2.1",
		"@angular/cli": "~15.2.1",
		"@angular/compiler-cli": "^15.2.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.1.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.0.0",
		"ng-packagr": "^15.2.2",
		"typescript": "~4.9.4"
	}
}
